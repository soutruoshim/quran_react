{
  "name": "Al-Quran",
  "productName": "Al Quran",
  "version": "0.1.7",
  "description": "Al Quran Desktop App",
  "author": {
    "name": "Hasib Molla",
    "email": "hasibmolla28@gmail.com"
  },
  "build": {
    "appId": "al.quran",
    "win": {
      "icon": "build/icon.ico"
    },
    "mac": {
      "icon": "build/icon.icns"
    },
    "nsis": {
      "oneClick": false
    }
  },
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@ant-design/icons": "^4.3.0",
    "@craco/craco": "^6.0.0",
    "@headlessui/react": "^0.2.0",
    "@kunukn/react-collapse": "^2.2.9",
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "antd": "^4.9.4",
    "autoprefixer": "^9.8.6",
    "concurrently": "^5.3.0",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.3.1",
    "electron-updater": "^4.3.5",
    "is-electron": "^2.2.0",
    "lodash.startcase": "^4.4.0",
    "postcss": "^7.0.35",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "sass": "^1.53.0",
    "styled-components": "^5.2.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.2",
    "wait-on": "^5.2.0",
    "web-vitals": "^0.2.4"
  },
  "main": "public/electron.js",
  "scripts": {
    "react-start": "craco start",
    "react-build": "craco build",
    "react-test": "craco test",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder -wm -p always",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently \"BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron . \""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MuttakinHasib/Al-Quran.git"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "MuttakinHasib",
      "repo": "Al-Quran"
    }
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "redux-devtools-extension": "^2.13.8"
  }
}
